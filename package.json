{
  "name": "carnagereporter",
  "version": "3.0.0",
  "description": "Halo 3 MCC Stats Tracker - Monitors matches, generates PNGs, sends to WhatsApp, uploads to Supabase",
  "main": "src/carnage_reporter.js",
  "bin": "src/carnage_reporter.js",
  "scripts": {
    "start": "node src/carnage_reporter.js",
    "test": "node src/carnage_reporter.js",
    "build": "pkg src/carnage_reporter.js --targets node18-win-x64 --output dist/CarnageReporter.exe"
  },
  "keywords": [
    "halo",
    "mcc",
    "stats",
    "tracker"
  ],
  "author": "iChocko",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.91.1",
    "archiver": "^7.0.1",
    "chokidar": "^3.5.3",
    "dotenv": "^17.2.3",
    "fast-xml-parser": "^4.3.2",
    "puppeteer": "^21.0.0",
    "qrcode-terminal": "^0.12.0",
    "unzipper": "^0.12.3",
    "whatsapp-web.js": "^1.34.4"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "assets/match_summary.html",
      "node_modules/puppeteer/.local-chromium/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ]
  }
}
